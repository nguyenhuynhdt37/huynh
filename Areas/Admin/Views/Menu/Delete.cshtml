@model OnlineCourse.Models.AdminMenu
@{
    ViewData["Title"] = "Delete Menu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Confirm to delete a menu</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Menu ID</label>
            <input asp-for="AdminMenuId" type="text" class="form-control mb-3" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Menu Name</label>
            <input asp-for="ItemName" type="text" class="form-control mb-3" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Areas</label>
            <input asp-for="AreaName" type="text" class="form-control mb-3" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Controller</label>
            <input asp-for="ControllerName" type="text" class="form-control mb-3" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Action</label>
            <input asp-for="ActionName" type="text" class="form-control mb-3" disabled />
        </div>
    </div>

    <form asp-area="Admin" asp-controller="Menu" asp-action="Delete" method="post">
        <input asp-for="AdminMenuId" type="hidden" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="javascript:history.back()" class="btn btn-primary">Back to list</a>
    </form>
</main>