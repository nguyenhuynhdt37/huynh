@model OnlineCourse.Models.Lesson
@{
    ViewData["Title"] = "Delete Lesson";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Bạn có chắc muốn xoá bài học này không?</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Lesson ID</label>
            <input asp-for="LessonId" type="text" class="form-control mb-3" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Tên bài học</label>
            <input asp-for="Name" type="text" class="form-control mb-3" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Kiểu nội dung</label>
            <input asp-for="ContentType" type="text" class="form-control mb-3" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Trạng thái (IsActive)</label>
            <input asp-for="Status" type="text" class="form-control mb-3" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Link Video</label>
            <input asp-for="VideoUrl" type="text" class="form-control mb-3" disabled />
        </div>
        <div class="form-group col-md-6">
            <label>Tên tệp</label>
            <input asp-for="FilePath" type="text" class="form-control mb-3" disabled />
        </div>
    </div>

    <form asp-area="Admin" asp-controller="Lesson" asp-action="Delete" method="post">
        <input type="hidden" asp-for="ChapterId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="Admin" asp-controller="Lesson" asp-action="Index" asp-route-courseId="@Model.ChapterId" class="btn btn-warning">Về danh sách bài học</a>
        <a asp-area="Admin" asp-controller="Course" asp-action="Index" class="btn btn-primary">Về trang khoá học</a>
        @* <a href="javascript:history.back()" class="btn btn-secondary">Back</a> *@
    </form>
</main>

