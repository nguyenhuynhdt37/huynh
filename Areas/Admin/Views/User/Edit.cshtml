@model AppUserModel
@{
    ViewData["Title"] = "Edit User";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Edit the user</h2>
    </div>
    <div class="container shadow p-5">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Ảnh đại diện</label>
                    <input asp-for="Avatar" id="file_input" class="form-control" placeholder="Chọn ảnh" />
                    <button onclick="openDialog()" type="button" id="chooseImageBtn" class="btn btn-primary btn-sm mt-2">Chọn ảnh</button>
                    <img id="previewImage" src="" alt="Preview Image" style="display:none;" />
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Username</label>
                    <input asp-for="UserName" class="form-control">
                    <span asp-validation-for="UserName" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Phone number</label>
                    <input asp-for="PhoneNumber" class="form-control">
                    <span asp-validation-for="PhoneNumber" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Select Role</label>
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                        <option value="">-- Select Role --</option>
                    </select>
                    <span asp-validation-for="RoleId" class="alert-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>

            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-secondary">Back</a>
        </form>
    </div>
</main>

@{
    var summernote = new OnlineCourse.Areas.Admin.Models.SummerNote("#Details");
    <partial name="_SummerNote" model="summernote" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
